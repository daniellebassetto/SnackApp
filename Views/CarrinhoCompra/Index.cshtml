@model CarrinhoCompraViewModel

<div class="container">
    <div class="row">
    <img src="~/images/Full-Cart-icon.png"/>
    <div>
        <h4>Seu carrinho de compras: </h4>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                    @foreach(var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                    {
                        <tr>
                            <td class="text-center">@item.Quantidade</td>
                            <td class="text-center">@item.Lanche.Nome</td>
                            <td class="text-center">@item.Lanche.Preco.ToString("c")</td>

                            <td class="text-right">
                                @((item.Quantidade + item.Lanche.Preco).ToString("c"))
                            </td>

                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra" asp-route-lancheId="@item.Lanche.Id">
                                <img src="~/images/delete.png"/>
                            </a>
                        </tr>
                    }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        @Model.Total.ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <a asp-controller="Pedido" asp-action="Checkout" class="btn btn-sucess">Encerrar Pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a asp-controller="Lanche" asp-action="List" class="btn btn-primary">Continuar Comprando</a>
            </div>
        </div>
    </div>
    </div>
</div>