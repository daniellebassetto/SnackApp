@model Lanche
    
<div class="col-sm-4 col-md-4 col-lg-4">
    <img class="img-fluid" src="@Model.ImagemUrl" alt="Imagem do Lanche" />
    <h3>@Model.Preco.ToString("c")</h3>
    <a asp-controller="Lanche" asp-action="Details" asp-route-id="@Model.Id">@Model.Nome</a>
    <p>@Model.DescricaoCurta</p>

    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItem" asp-route-lancheId="@Model.Id">Incluir no Carrinho</a>
        </p>
    </div>
</div>